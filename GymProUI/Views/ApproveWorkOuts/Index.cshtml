@model IEnumerable<GymProUI.ViewModel.ApproveWorkoutsViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>


<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.WorkId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Weight)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Height)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BMI)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WorkoutDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GoalName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsApproved)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WorkId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BMI)
            </td>
            <td>
                @Html.Raw(item.WorkoutDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoalName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
              
               
                    <form asp-action="Approve" asp-controller="ApproveWorkOuts" method="post">
                        <input type="hidden" name="workId" asp-for="@item.WorkId"/>
                        @*<input type="checkbox" name="flag"asp-for="@item.IsApproved"/>*@
                        <input type="submit" value="Approve"/>
                    </form>
                

            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
               
            </td>
        </tr>
}
    </tbody>
</table>
